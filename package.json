{
  "name": "sgcarstrends",
  "description": "Monorepo for SG Cars Trends",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "author": "Ru Chern Chong <ruchern.chong@sgcarstrends.com>",
  "license": "MIT",
  "scripts": {
    "dev": "turbo dev --parallel",
    "dev:web": "turbo dev --filter=@sgcarstrends/web",
    "dev:docs": "turbo dev --filter=@sgcarstrends/docs",
    "build": "turbo build --env-mode=loose",
    "build:web": "turbo build --env-mode=loose --filter=@sgcarstrends/web",
    "start:web": "turbo start --filter=@sgcarstrends/web",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "bun --filter=@sgcarstrends/web test:e2e",
    "test:e2e:ui": "bun --filter=@sgcarstrends/web test:e2e:ui",
    "lint": "turbo lint",
    "migrate": "turbo migrate",
    "migrate:check": "turbo migrate:check",
    "docs:build": "bun --filter=@sgcarstrends/docs build",
    "deploy:api:dev": "bun --filter=@sgcarstrends/api deploy --stage dev",
    "deploy:api:staging": "bun --filter=@sgcarstrends/api deploy --stage staging",
    "deploy:api:prod": "bun --filter=@sgcarstrends/api deploy --stage prod",
    "deploy:web:dev": "bun --filter=@sgcarstrends/web deploy:dev",
    "deploy:web:staging": "bun --filter=@sgcarstrends/web deploy:staging",
    "deploy:web:prod": "bun --filter=@sgcarstrends/web deploy:prod",
    "changeset": "changeset",
    "version": "changeset version",
    "tag-release": "changeset tag",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-lerna-scopes": "^19.8.1",
    "@types/node": "^22.13.9",
    "@vitest/coverage-v8": "^3.1.2",
    "husky": "^9.1.7",
    "turbo": "^2.5.4",
    "typescript": "^5.4.5",
    "vitest": "^3.1.2"
  },
  "packageManager": "bun@1.2.17"
}
